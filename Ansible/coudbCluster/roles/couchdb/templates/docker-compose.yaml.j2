version: "3"

services:
  db:
    image: couchdb:2.3.0
    hostname: mycouchdb
    environment:
      COUCHDB_USER: {{ couch_user }}
      COUCHDB_PASSWORD: {{ couch_password }}
      NODENAME: {{ ansible_host }}
    ports:
      - "5984:5984"
      - "5986:5986"
      - "4369:4369"
      - "9100-9200:9100-9200"
  web:
    build: .
    command: python manage.py runserver 0.0.0.0:80
    volumes:
       - .:/code
    ports:
      - "80:80"
    depends_on:
      - db